<ContentDialog
    x:Class="Template10.Controls.TodoListEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Template10.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Title=" "
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ContentDialog.Content>
        <StackPanel Margin="12,0,0,0" MaxWidth="300">

            <!-- item details -->
            <TextBox Width="300" Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        </StackPanel>
    </ContentDialog.Content>
    
</ContentDialog>
